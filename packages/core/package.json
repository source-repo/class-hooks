{
  "name": "@diginet/class-hooks",
  "version": "2.0.4",
  "description": "Use React hooks in class components with field bindings",
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && tsc --module commonjs --outDir dist/cjs",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "anderswestberg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/source-repo/class-hooks.git"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^17 || ^18 || ^19"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.0.0",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^27.0.0",
    "@vitest/ui": "^4.0.8",
    "jsdom": "^27.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "keywords": [
    "react",
    "react hooks",
    "class components",
    "hooks in classes",
    "typescript",
    "oop react",
    "react mixins",
    "react bridge",
    "react hook bridge",
    "classHooks",
    "react utilities",
    "react integration",
    "modern react",
    "react compatibility",
    "react class decorators",
    "inheritance",
    "react hook wrapper",
    "react patterns",
    "react class lifecycle"
  ]
